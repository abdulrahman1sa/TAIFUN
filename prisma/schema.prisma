// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Group {
  id            String   @id @default(cuid())
  platform      String   // "telegram" or "whatsapp"
  college       String
  subject       String
  sectionNumber String
  groupLink     String
  groupName     String
  description   String?
  memberCount   Int      @default(0)
  votes         Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([college, subject, sectionNumber])
  @@index([platform])
}

model GroupSubmission {
  id            String   @id @default(cuid())
  platform      String   // "telegram" or "whatsapp"
  college       String
  subject       String
  sectionNumber String
  groupLink     String
  groupName     String
  submitterName String   @default("مجهول")
  status        String   @default("pending") // "pending", "approved", "rejected"
  reviewedBy    String?
  reviewNote    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Vote {
  id        String   @id @default(cuid())
  groupId   String
  voteType  String   // "up" or "down"
  ipAddress String
  createdAt DateTime @default(now())

  @@unique([groupId, ipAddress])
  @@index([groupId])
}
